  </property>

<property>
  <description>Nbre max de job mapreduce</description>
  <name>mapreduce.job.counters.max</name>
  <value>200</value>
</property>

<property>
  <name>mapreduce.am.max-attempts</name>
  <value>5</value>
</property>
